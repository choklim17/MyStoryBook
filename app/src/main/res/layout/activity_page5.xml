<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page5">

    <TextView
        android:id="@+id/txtWorkExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Work Experiences"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtWorkExpStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWorkExp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="Story goes here"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imgHeadset"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtWorkExpStory"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/agent_icon" />

    <ImageView
        android:id="@+id/imgCAD"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtWorkExpStory"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/autocad_logo" />

    <Button
        android:id="@+id/btnPrevious4"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:onClick="goToFourthPage"
        android:text="Previous" />

    <TextView
        android:id="@+id/txtPage5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Page 5"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnSixthPage"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:onClick="goToSixthPage"
        android:text="Next" />

</RelativeLayout>